# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_DEPLOYMENT_NAME=your_deployment_name
AZURE_API_VERSION=2024-02-15-preview
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Google Search Configuration (Optional)
# Get your API key from: https://serper.dev/
GOOGLE_SERPER_API_KEY=your_google_serper_api_key_here

# Vector Store Configuration
VECTOR_STORE_URLS_FILE=urls.txt
# Set to "false" to disable fallback to default URLs when urls.txt is missing/empty
DEFAULT_URLS_FALLBACK=true

# User Agent for Web Scraping
USER_AGENT=AgenticRAG/1.0 (Educational Research Tool)