# Docker Environment Template
# Copy this file to .env and fill in your actual values for local development

# API Configuration
API_PORT=50000
ENVIRONMENT=production

# Rate Limiting (disabled by default)
RATE_LIMIT_ENABLED=false
RATE_LIMIT=100/minute

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO

# Azure OpenAI Configuration - REPLACE WITH YOUR VALUES
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_DEPLOYMENT_NAME=gpt-4o
AZURE_API_VERSION=2025-01-01-preview

# Google Search API (optional) - REPLACE WITH YOUR VALUES
GOOGLE_SERPER_API_KEY=your_serper_api_key_here
SERPER_API_KEY=your_serper_api_key_here

# Vector Store Configuration
VECTOR_STORE_URLS_FILE=urls.txt
# Set to "false" to disable fallback to default URLs when urls.txt is missing/empty
DEFAULT_URLS_FALLBACK=true

# User Agent for Web Scraping
USER_AGENT=AgenticRAG/1.0 (Educational Research Tool)